<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentChatList">

    <fragment
        android:id="@+id/fragmentChatList"
        android:name="com.nicholas.tuchat.ChatListFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chat_list" >
<!--        the action defines the next destination from the current-->
        <action
            android:id="@+id/action_chatList_to_settings"
            app:destination="@id/fragmentSettings" />
    </fragment>

    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.nicholas.tuchat.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settings_to_accSettings"
            app:destination="@id/fragmentAccSettings" />
    </fragment>

    <fragment
        android:id="@+id/fragmentAccSettings"
        android:name="com.nicholas.tuchat.AccountSettingsFragment"
        android:label="Account Management"
        tools:layout="@layout/fragment_account_settings" />

</navigation>